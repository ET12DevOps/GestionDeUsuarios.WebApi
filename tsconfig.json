{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./source",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "target": "es6",
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false
   }
}